<div class="container">
  <h1 style="text-align:left;">Edit your page's appearance!</h1>
  <%# This takes us to the registrations_controller which does the update_resource %>
  <%= simple_form_for(current_user,
    url: registration_path(current_user),
    html: {method: :put},
    data: {turbo: false}) do |f|  %>
    <div class="row">
      <div class="col-6 link-list">
        <div class="row mt-5">
          <div class="col-6">
            <%= image_tag(current_user.avatar, class:"avatar-image") if current_user.avatar.attached? %>
          </div>
          <div class="col-6 mt-5 upload-photo">
            <%= f.input :avatar, required: false, input_html: { class: 'd-none'}, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a photo' %>
          </div>
        </div>

        <div class="row mt-5">

          <div class="col-6 no-padding-col">
          <%= f.input :full_name, placeholder: "Your full name...", label: false, class:"form-control", required: false %>
          </div>
          <div class="col-6 no-padding-col">
            <div class="input-group mb-3 flex-nowrap">
              <span class="input-group-text">@</span>
              <%= f.input :username, placeholder: "Your username..", label: false, class:"form-control", required: true %>
            </div>
          </div>

        </div>

        <div class="row mt-5">
          <div class="col no-padding-col">
          <%= f.input :body, placeholder: "About you..", label: false, class:"form-control", required: false %>
          </div>
        </div>

        <div class="col-4 no-padding-col mt-5">
          <%= f.submit "Update Account", class:"btn btn-dark"  %>
        </div>
      </div>
      <div class="col-6 link-preview">
      </div>
    </div>
  <% end %>
</div>
