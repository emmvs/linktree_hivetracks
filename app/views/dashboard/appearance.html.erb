<div class="container text-white">
  <h1 style="text-align:left;">Edit your page's appearance!‚úçüèª</h1>
    <%= simple_form_for(current_user,
      url: registration_path(current_user),
      html: {method: :put},
      data: {turbo: false}) do |f|  %>
      <div class="row">
        <div class="col-6 link-list">
          <div class="row mt-5">
            <div class="col-6">
              <%= cl_image_tag current_user.avatar.key, class: "avatar-image" if current_user.avatar.attached?  %>
            </div>
            <div class="col-6 mt-5 upload-photo">
              <%= f.input :avatar, required: false, input_html: { class: 'd-none'}, label_html: { class: 'upload-photo p'}, label: 'üì∑ Upload a photo' %>
            </div>
          </div>
          <div class="row mt-5">
            <div class="col-6">
            <%= f.input :full_name, placeholder: "Linktree Title", label: false, class:"form-control", required: false %>
            </div>
            <div class="col-6">
              <div class="input-group mb-3 flex-nowrap">
                <span style="height: 61px;"class="input-group-text d-flex align-items-center">@</span>
                  <%= f.input :username,
                              placeholder: "Your username..",
                              label: false,
                              wrapper_html: { class: "flex-grow-1" },
                              required: true %>
              </div>
            </div>
          </div>

          <div class="row mt-5">
            <div class="col">
            <%= f.input :body, placeholder: "About you..", label: false, class:"form-control", required: false %>
            </div>
          </div>

          <%# LinktreeCustomization %>
          <%= f.simple_fields_for :linktree_customization do |ltc| %>
            <div class="row">
              <div class="col-6">
                <%= ltc.input :theme, label: 'Theme', placeholder: "dark" %>
              </div>
              <div class="col-6">
                <%= ltc.input :background_color, label: 'Background Color', placeholder: "#89CFF0" %>
              </div>
              <div class="col-6">
                <%= ltc.input :link_shape, label: 'Link Shape', placeholder: "round" %>
              </div>
              <div class="col-6">
                <%= ltc.input :link_color, label: 'Link Color', placeholder: "#89CFF0" %>
              </div>
              <div class="col-6">
                <%= ltc.input :link_font_color, label: 'Link Font Color', placeholder: "#89CFF0" %>
              </div>
            </div>
          <% end %>

          <div class="col-4 no-padding-col mt-5">
            <%= f.submit "Update Account", class: "btn btn-dark" %>
          </div>
          <%# TODO: Implement link to see Linktree %>
          <%# <%= link_to 'See linktree', root_path, class: "btn btn-dark" %>
        </div>
        <div class="col-6 link-preview">
        </div>
      </div>
    <% end %>

    <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: "delete"}, class:"btn btn-warning" %>
</div>
